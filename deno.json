{
    "tasks": {
        "dev" : "deno run -A grape.js & export LOCAL=./src && deno run  -A --unsafely-ignore-certificate-errors --watch=./src/ index.js",
        "run": " export LOCAL=./src/_server && export LOCAL_BUILD=. && deno run --watch -A ./backpack/index.js build",
        "test": " deno task build && deno test ./qa --allow-run  --allow-net --allow-env --allow-read --import-map ./src/import_map.json ",
        "bundle": "deno bundle --watch ./src/_server/index.js ./backpack/server.js && cd backpack && zip -r ../binary.zip .",
        "reload": "deno cache --import-map ./src/import_map.json --reload ./src/server/index.js",
        "init": "chmod +x style && ./style",
        "setup": "curl -sLO https://github.com/codebenderhq/backpack/releases/download/0.0.4/binary.zip  && unzip binary.zip",
        "compile": "cd backpack && zip -r ../binary.zip ."
    }
}